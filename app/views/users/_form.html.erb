<div class="ui container">
  <div class="ui clearing segment">
    <p style="color: green"><%= notice %></p>

    <%= form_with(model: @user) do |form| %>
      <% if @user.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="ui container">
        <div class="ui form">
          <div class="field" style="width:200px;">
              <%= form.label :building_number%>
              <%= form.text_field :building_number %>
          </div>     
          <div class="field" style="width:200px;">
              <%= form.label :name %>
              <%= form.text_field :name %>
            </div>

          <div class="field" style="width:200px;">
              <%= form.label :city %>
              <%= form.select :city,  options_for_select(options_for_status), {:class => "selectpicker",:include_blank => true },{multiple: true}%>
          </div>
          <div class="field" style="width:200px;">
              <%= form.label :date %>
              <%= form.date_field :date, :id => "datepicker"  %>
            </div>

          
          <div class="field" >
            <%= form.submit  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $('select').selectpicker();

  $(document).ready(function(){
    $('.datepicker').datepicker({
      format: 'dd/mm/yyyy'
    });
  });


</script>

